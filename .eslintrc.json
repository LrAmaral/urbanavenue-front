{
  "extends": [
    "@rocketseat/eslint-config/next",
    "next/core-web-vitals"
  ],
  "rules": {
    "comma-dangle": ["error", "never"],
    "quotes": ["error", "single", { "avoidEscape": true }]
  },
  "overrides": [
    {
      "files": ["*.json"],
      "rules": {
        "quotes": ["error", "double"]
      }
    }
  ]
}